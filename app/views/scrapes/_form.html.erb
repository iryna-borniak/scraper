<%= simple_form_for :scrape, url: root_path, method: :get, html: { class: "flex gap-3" } do |f| %>
  <%= f.input :url, label: false, placeholder: "URL to Scrape", wrapper_html: { class: "w-full" }, input_html: { class: "form-input h-12 m-0" } %>
  <%= f.button :submit, "Scrape", class: "btn-submit w-40 h-12 m-0" %>
<% end %>
