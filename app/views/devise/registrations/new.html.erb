<div class="content">
  <h2>Sign up</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :username,
                  required: true,
                  autofocus: true,
                  placeholder: "add username",
                  wrapper_html: { class: "mt-4" },
                  input_html: { class: "form-input" }%>

      <%= f.input :first_name,
                  required: true,
                  autofocus: true,
                  placeholder: "add first name",
                  wrapper_html: { class: "mt-4" },
                  input_html: { class: "form-input" }%>

      <%= f.input :last_name,
                  required: true,
                  autofocus: true,
                  placeholder: "add last name",
                  wrapper_html: { class: "mt-4" },
                  input_html: { class: "form-input" }%>

      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  placeholder: "add email",
                  wrapper_html: { class: "mt-4" },
                  input_html: { autocomplete: "email", class: "form-input" }%>

      <%= f.input :password,
                  required: true,
                  placeholder: "add password (6 characters minimum)",
                  wrapper_html: { class: "mt-4" },
                  input_html: { autocomplete: "new-password", class: "form-input" } %>

      <%= f.input :password_confirmation,
                  required: true,
                  placeholder: "confirm password",
                  wrapper_html: { class: "mt-4 mb-11" },
                  input_html: { autocomplete: "new-password", class: "form-input" } %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Sign Up", class: "btn-submit" %>
    </div>
  <% end %>
</div>
