<div class="content">
  <h2>Зареєструватись</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :username,
                  required: true,
                  autofocus: true,
                  placeholder: "Логін",
                  wrapper_html: { class: "mt-4" },
                  input_html: { class: "form-input" }%>

      <%= f.input :first_name,
                  required: true,
                  autofocus: true,
                  placeholder: "Ім'я",
                  wrapper_html: { class: "mt-4" },
                  input_html: { class: "form-input" }%>

      <%= f.input :last_name,
                  required: true,
                  autofocus: true,
                  placeholder: "Прізвище",
                  wrapper_html: { class: "mt-4" },
                  input_html: { class: "form-input" }%>

      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  placeholder: "Електронна пошта",
                  wrapper_html: { class: "mt-4" },
                  input_html: { autocomplete: "email", class: "form-input" }%>

      <%= f.input :password,
                  required: true,
                  placeholder: "Пароль (мінімум 6 символів)",
                  wrapper_html: { class: "mt-4" },
                  input_html: { autocomplete: "new-password", class: "form-input" } %>

      <%= f.input :password_confirmation,
                  required: true,
                  placeholder: "Підтвердити пароль",
                  wrapper_html: { class: "mt-4 mb-11" },
                  input_html: { autocomplete: "new-password", class: "form-input" } %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Зареєструватись", class: "btn-submit" %>
    </div>
  <% end %>
</div>
